<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="style.css">
    <title>Reporting Page</title>
</head>
<body>
    
    <form action="/report" method="POST" id="report_form">
        <h1>Reporting Page!</h1>
        <label for="description">Description</label>
        <br>
        <textarea placeholder="Describe your report" id="descr_box" name="description">
        </textarea>
        <br>
        <div class="image_box">
        <label for="image">Upload an image</label>
        <input type="file" name="image" id="image">
        </div>
        <br>
        <div class="video_box">
        <label for="video">Upload a video</label>
        <input type="file" name="video" id="video">
        </div>
        <br/>
        <div class="Types_box">
        <label for="Types">Types</label>
        <br>
        <select name="Types" id="Types">
            <option value="Traffic">Traffic</option>
            <option value="Event">Event</option>
            <option value="Accident">Accident</option>
            <option value="Hazards">Hazards</option>
        </select>
        </div>
        <br>
        <div class="location_box">
        <label for="location">Location:</label>
        <br>
        <input type="text" id="location" name="location" placeholder="Write location Here" />
        </div>
        <br>
        <hr>
        <input type="submit" value="Maps" id="map" name="map" />
        <input type="submit" name="chat" id="chat" value="chat"/>
    </form>

</body>
</html>